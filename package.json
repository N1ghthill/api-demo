{
  "name": "api-demo",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "tsx watch server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "test": "find tests -name '*.test.ts' -print0 | xargs -0 node --import tsx --test",
    "check": "npm run typecheck && npm run test",
    "docs:openapi": "redocly lint docs/openapi.yaml",
    "db:setup": "bash scripts/db-setup.sh",
    "db:apply": "bash scripts/db-apply.sh"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "pino": "^10.3.1",
    "pg": "^8.19.0",
    "redis": "^5.9.0"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@redocly/cli": "^1.34.5",
    "@types/node": "^25.3.2",
    "@vercel/node": "^5.6.8",
    "@types/express": "^5.0.6",
    "@types/pg": "^8.15.6",
    "eslint": "^10.0.2",
    "globals": "^17.3.0",
    "tsx": "^4.20.6",
    "typescript-eslint": "^8.46.2"
  }
}
