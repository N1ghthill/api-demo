# PostgreSQL
DATABASE_URL=postgres://demo:demo@localhost:5432/enrollment_demo

# Public URLs
BACKEND_BASE_URL=http://localhost:3000
FRONTEND_BASE_URL=http://localhost:5500

# CORS (optional; comma-separated)
# FRONTEND_ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500

# Payment provider mode:
# - mock (default): deterministic fake gateway for demos/tests
# - rede: real e.Rede integration
PAYMENT_PROVIDER_MODE=mock

# e.Rede (required only when PAYMENT_PROVIDER_MODE=rede)
# REDE_ENV=sandbox
# REDE_PV=YOUR_PV
# REDE_TOKEN=YOUR_TOKEN
# REDE_SOFT_DESCRIPTOR=TECH DEMO
# REDE_TIMEOUT_MS=15000

# Internal operator token for GET /api/leads
# Prefer SHA-256 hash in production environments
# MATRICULADOR_TOKEN=replace-with-a-strong-token
# MATRICULADOR_TOKEN_SHA256=64_hex_chars_sha256
